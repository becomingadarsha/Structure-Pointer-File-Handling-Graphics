// Library with Data memeber, book no, book namer, price,publication using Structure 
#include<stdio.h>
#include<conio.h>

 struct library
{
	int bookno;
	char bookname[50];
	float price;
	char publication[50];
	};
	
	int main()
	{
	struct library book[100];
	int i;
	for(i=0;i<2;i++)
	{
		printf("enter the detail of book 1\n");
		printf("book name=");
		scanf("%s",book[i].bookname);
		printf("book no=");
		scanf("%d",&book[i].bookno);
		printf("publication=");
		scanf("%s",&book[i].publication);
		printf("price=");
		scanf("%f",&book[i].price);
	}
	for(i=0;i<2;i++)
		printf("\n\nthe book name=%s\nbook no=%d\npublication=%s\nprice=%f\n\n",book[i].bookname,book[i].bookno,book[i].publication,book[i].price);

	return 0;
	
}
