
#include <stdio.h>
#include <math.h>

#define PI 3.1415

void PVA(float *r,float *a,float *p,float *v);

void main()
{
    float r,area,vol,per;
    printf("Enter the radius: ");
    scanf("%f",&r);
    PVA(&r,&area,&per,&vol);
    printf("Radius = %3.3f\nArea = %3.3f\nPerimeter = %3.3f\nVolume = %3.3f",r,area,per,vol);
}

void PVA(float *r,float *a,float *p,float *v)
{
    *a = PI * pow(*r,2);
    *p = 2 * PI * *r;
    *v = 4/3 * PI * pow(*r,3);
}
