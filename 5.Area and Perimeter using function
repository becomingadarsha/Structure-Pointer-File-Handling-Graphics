//Write a program to find area, perimeter of square by passing pointer to function.

#include<stdio.h>
int result1(int*,int*);
int result2(int*,int*);

int  main()
{
	int l,b,x,y;
	printf("Enter length and breadth of rectangle:");
	scanf("%d%d",&l,&b);
	x=result1(&l,&b);
	y=result2(&l,&b);
	printf("Area is %d \nperimeter is %d",x,y);
}
int result1(int *l, int *b)
{
	int area;
	 area=(*l)*(*b);
	return (area);
}
int result2(int *l, int *b)
{
	int peri;
	peri=2*((*l)+(*b));
	return (peri);
}
