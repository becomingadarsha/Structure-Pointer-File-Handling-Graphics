#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i,n,sum=0;
	int *ptr;
	printf("How many numbers?");
	scanf("%d",&n);
	ptr=(int*) malloc(n* sizeof(int));//malloc use
	ptr=(int*) calloc(n,sizeof(int));//calloc
	for(i=0;i<n;i++)
	{
		scanf("%d",(ptr+i));
	}
	
		for(i=0;i<n;i++)
	{
	sum=sum + *(ptr+i);
	}
	
	printf("The sum is %d",sum);
	free(ptr);
}
