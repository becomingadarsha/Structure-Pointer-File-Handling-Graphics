
//8.	Write a program to accept numbers and sort them with using pointers.
#include<stdio.h>
int main() //In bubble sort first compare with second and goes till last moving the largest number backward
{
	int i,j,n,temp,a[100];
	int *p, *x;
		printf("How many numbers to be inputed?");
		scanf("%d",&n);
	   x=&a[0];
		printf("Enter number one by one:\n");
		for(i=0;i<n;i++)
		{
			scanf("%d",&*(x+i));
		}
		for(i=0;i<n;i++)
		{
			for(j=0;j<n-i-1;j++)
			{
			if(*(x+j)>*(x+j+1))
				{
					temp=*(x+j);
					*(x+j)=*(x+j+1);
					*(x+j+1)=temp; 
					
				}
			}
		}
		printf("\n\nThe number in ascending order is:\n");
		for(i=0;i<n;i++)
		{
			printf("%d\n",*(x+i));
		}
		
	}
