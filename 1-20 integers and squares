//Create a program to create a data file and 
 //write the integers from 1 to 20 to this file and 
 //then read the numbers from the file to display the squares of the stored numbers. 
 
 #include<stdio.h>
 #include<string.h>
 int main()
 {
 	FILE *fp;
 	int i,square=1;
 	fp=fopen("integers.txt","w");
 	for(i=1;i<=20;i++)
 	{
 		fprintf(fp,"%d\n",i);
	 }
	 fclose(fp);
	 
	 //time to read numbers
	 fp=fopen("integers.txt","r");
	 printf("\nThe square of numbers are:\n");
	 for(i=0;i<=20;i++)
	 {
	 fscanf(fp,"%d",&i);
	 square=i*i;
	 printf("%d\n",square);	
	 }
	 
	 
 }
