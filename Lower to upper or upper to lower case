#include <stdio.h>

void convert (char *a);

main()
{
    char ch;
    printf("Enter a character: ");
    scanf("%c",&ch);
    convert(&ch);
    printf("The converted character is %c",ch);
}

void convert (char *a)
{
    if (*a>='a' && *a<='z')
        *a -= 32;
    else if(*a>='A' && *a<='Z')
        *a +=32;
    else
        printf("Enter alphabet");
}
